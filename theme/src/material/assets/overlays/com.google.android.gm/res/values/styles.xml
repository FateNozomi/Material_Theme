<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ComposeTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/PlainActionBarStyle</item>


        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@android:color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up_holo_light</item>
    </style>

    <style name="PlainActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:icon">@*android:color/transparent</item>
        <item name="android:background">@drawable/ab_solid_light_holo</item>
    </style>

    <style name="UnifiedEmailTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionModeBackground">@drawable/cab_background_top_holo_dark</item>
        <item name="android:actionBarStyle">@style/PlainActionBarStyle</item>


        <item name="android:listViewWhiteStyle">@*android:style/Widget.Holo.ListView</item>
        <item name="android:actionDropDownStyle">@style/PlainSpinnerDropdown</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up_holo_light</item>
    </style>

    <style name="PlainSpinnerDropdown" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@null</item>
    </style>

    <style name="OverflowButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
    </style>

</resources>
