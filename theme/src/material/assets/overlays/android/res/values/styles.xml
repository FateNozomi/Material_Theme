<resources>

    <!-- Framework Slider Buttons Design -->
    <style name="Widget.Holo.CompoundButton.Switch" parent="@*android:style/Widget.Holo.CompoundButton">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:thumb">@*android:drawable/switch_inner_holo_dark</item>
        <item name="android:switchTextAppearance">@*android:style/TextAppearance.Holo.Widget.Switch</item>
        <item name="android:track">@drawable/switch_track_holo_dark</item>
        <item name="android:switchMinWidth">0.0dip</item>
        <item name="android:switchPadding">0.0dip</item>
        <item name="android:thumbTextPadding">10.0dip</item>
    </style>

    <style name="Widget.Holo.Light.CompoundButton.Switch" parent="@*android:style/Widget.CompoundButton.Switch">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:thumb">@*android:drawable/switch_inner_holo_light</item>
        <item name="android:switchTextAppearance">@*android:style/TextAppearance.Holo.Light.Widget.Switch</item>
        <item name="android:track">@drawable/switch_track_holo_light</item>
        <item name="android:switchMinWidth">0.0dip</item>
        <item name="android:switchPadding">0.0dip</item>
        <item name="android:thumbTextPadding">10.0dip</item>
    </style>

	<!-- Framework Dialog Window Title -->
    <style name="TextAppearance.Holo.Light.DialogWindowTitle" parent="@*android:style/TextAppearance.Holo.Light">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/holo_blue_dark</item>
    </style>

	<!-- Framework ActionBar Title -->
    <style name="TextAppearance.Holo.Widget.ActionBar.Title" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textStyle">normal</item>
		<item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Holo.Widget.ActionBar.Title.Inverse" parent="@android:style/TextAppearance.Holo.Medium.Inverse">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textStyle">normal</item>
		<item name="android:fontFamily">sans-serif-medium</item>
    </style>

	<!-- Framework Notification Design -->
    <style name="TextAppearance.StatusBar.EventContent" parent="@*android:style/TextAppearance.StatusBar">
        <item name="android:textSize">@dimen/notification_text_size</item>
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Title" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">@dimen/notification_title_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>