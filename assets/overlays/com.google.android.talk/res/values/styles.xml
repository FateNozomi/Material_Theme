<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EsActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@drawable/ab_solid</item>
        <item name="android:titleTextStyle">@style/EsActionBar.Title</item>
        <item name="android:subtitleTextStyle">@style/EsActionBar.Subtitle</item>
    </style>
    <style name="EsActionBar.Title" parent="@style/EsActionBar">
        <item name="android:textStyle">normal</item>
		<item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">@color/text_secondary_default_color_dark_extra</item>
        <item name="android:background">#00000000</item>
    </style>
    <style name="EsActionBar.Subtitle" parent="@style/EsActionBar">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/text_secondary_default_color_dark</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginTop">-3.0sp</item>
    </style>

</resources>
